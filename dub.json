{
	"authors": [ "Sinisa Susnjar" ],
	"copyright": "Copyright Â© 2021, Sinisa Susnjar",
	"description": "D bindings for the memgraph DB",
	"license": "MIT",
	"name": "memgraph-d",
	"preGenerateCommands": [
		"git submodule update --init --recursive",
		"mkdir -p $PACKAGE_DIR/mgclient/build",
		"cd $PACKAGE_DIR/mgclient/build; cmake ..; make"
	],
	"libs": [ "openssl" ],
	"lflags": [ "$PACKAGE_DIR/mgclient/build/src/libmgclient.a" ],
	"configurations": [
		{
			"name": "lib",
			"excludedSourceFiles": ["source/test.d"],
			"targetType": "staticLibrary"
		},
		{
			"name": "shared",
			"excludedSourceFiles": ["source/test.d"],
			"targetType": "dynamicLibrary"
		},
		{
			"name": "memgraph-d-test-lib",
			"mainSourceFile": "source/test.d",
			"targetType": "executable"
		}
	]
}
