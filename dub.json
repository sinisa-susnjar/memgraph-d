{
	"authors": [ "Sinisa Susnjar" ],
	"copyright": "Copyright Â© 2021, Sinisa Susnjar",
	"description": "D bindings for the memgraph DB",
	"license": "MIT",
	"name": "memgraph-d",
	"preGenerateCommands": [
		"echo PACKAGE_DIR: $PACKAGE_DIR",
		"git pull --recurse-submodules",
		"mkdir -p $PACKAGE_DIR/mgclient/build; cd $PACKAGE_DIR/mgclient/build; cmake ..; make"
	],
	"configurations": [
		{
			"name": "lib",
			"excludedSourceFiles": ["source/test.d"],
			"targetType": "staticLibrary",
			"targetPath": "lib"
		},
		{
			"name": "shared",
			"excludedSourceFiles": ["source/test.d"],
			"targetType": "dynamicLibrary",
			"targetPath": "lib"
		},
		{
			"name": "memgraph-d-test-lib",
			"mainSourceFile": "source/test.d",
			"targetType": "executable",
			"libs": [ "openssl" ],
			"lflags": [ "mgclient/build/src/libmgclient.a" ]
		}
	]
}
